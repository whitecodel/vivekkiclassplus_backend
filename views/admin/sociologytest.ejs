<%- include('partials/header.ejs') %>

<!-- content start -->
<div class="main">
  <div class="d-flex head">
    <h2 class="heading">Sociology Tests :-</h2>
    <button
      data-toggle="modal"
      data-target="#addnewtest"
      class="btn btn-info ml-auto"
    >
      Add Test
    </button>
  </div>
  <div class="content">
    <% tests.forEach(function(test) { %>
    <table
      id="example"
      class="table table-striped table-bordered add-button"
      style="width: 100%"
    >
      <thead>
        <tr>
          <th class="text-center">Name</th>
          <th class="text-center">Duration</th>
          <th class="text-center">Questions</th>
          <th class="text-center">Edit</th>
          <th class="text-center">Delete</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <tr>
          <td><%= test.name %></td>
          <td><%= test.duration %></td>
          <td>
            <a href="/admin/sociologytest/questions?id=<%= test._id %>">
              <i class="material-icons table-icon btn play-video-icon"
                >help</i
              ></a
            >
          </td>
          <td class="text-center" style="width: 12px">
            <i
              class="material-icons table-icon btn edit-icon"
              data-toggle="modal"
              data-target="#edittest"
              onclick="editformupdate('<%= test._id %>', '<%= test.name %>', '<%= test.duration %>');"
              >edit</i
            >
          </td>

          <td class="text-center" style="width: 12px">
            <i
              class="material-icons table-icon btn delete-icon"
              onclick="deletetest('<%= test._id %>');"
              >delete</i
            >
          </td>
        </tr>
      </tbody>
    </table>
    <% }) %>
  </div>
  <div>
    <!-- Add Modal -->
    <div class="modal fade" id="addnewtest">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Add Test</h4>
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <form id="addnewtestform" class="mx-5">
              <div class="mb-3">
                <label>Enter Test Name</label>
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  placeholder="Test Name"
                />
              </div>
              <div class="mb-3">
                <label>Enter Test Duration</label>
                <input
                  type="time"
                  class="form-control"
                  name="duration"
                  placeholder="Test Duration"
                />
              </div>
              <button type="submit" class="btn btn-info mt-3 pull-right">
                Add
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="edittest">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Edit Test</h4>
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <form id="edittestform" class="mx-5">
              <input type="hidden" id="editid" name="editid" />
              <div class="mb-3">
                <label>Enter Test Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="editname"
                  name="editname"
                  placeholder="Test Name"
                />
              </div>
              <div class="mb-3">
                <label>Enter Test Duration</label>
                <input
                  type="time"
                  class="form-control"
                  id="editduration"
                  name="editduration"
                  placeholder="Test Duration"
                />
              </div>
              <button type="submit" class="btn btn-info mt-3 pull-right">
                Edit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include ('partials/footer.ejs') %>

    <script>
      activeSideBar("sociology-test-categories");
      $("#home_expand1").text("expand_more");
      $("#home_submenu1").show();

      $(document).ready(function () {
        $("#example").DataTable();
      });

      var addtestform = $("#addnewtestform");

      addtestform.on("submit", addtestsubmitHandler);

      function addtestsubmitHandler(e) {
        e.preventDefault();

        // PREPARE FORM DATA
        var tmpFormData = getFormData(addtestform);
        tmpFormData.category = getUrlParameter("id");
        var formData = JSON.stringify(tmpFormData);

        $.ajax({
          type: "POST",
          contentType: "application/json",
          url: "/admin/sociologytest" + "/add",
          data: formData,
        }).done((res) => {
          if (res == "success") {
            location.reload();
          } else {
            alert(res);
          }
        });
      }

      function editformupdate(id, name, duration) {
        $("#editid").val(id);
        $("#editname").val(name);
        $("#editduration").val(duration);
      }

      var edittestform = $("#edittestform");

      edittestform.on("submit", edittestsubmitHandler);

      function edittestsubmitHandler(e) {
        e.preventDefault();

        // PREPARE FORM DATA
        var tmpFormData = getFormData(edittestform);
        tmpFormData.category = getUrlParameter("id");
        var formData = JSON.stringify(tmpFormData);

        $.ajax({
          type: "POST",
          contentType: "application/json",
          url: "/admin/sociologytest" + "/update",
          data: formData,
        }).done((res) => {
          if (res == "success") {
            location.reload();
          } else {
            alert(res);
          }
        });
      }

      function deletetest(id) {
        if (confirm("Do you really want to delete this test")) {
          // DO POST
          $.ajax({
            type: "POST",
            contentType: "application/json",
            url: "/admin/sociologytest" + "/delete",
            data: JSON.stringify({
              id: id,
            }),
          }).done((res) => {
            if (res == "success") {
              location.reload();
            } else {
              alert(res);
            }
          });
        }
      }
    </script>
  </div>
</div>
